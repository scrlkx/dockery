{
    "id": "com.scrlkx.dockery",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "dockery",
    "finish-args": [
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=system-bus",
        "--filesystem=/run/docker.sock"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "com.scrlkx.dockery.py-deps.yml",
        {
            "name": "dockery",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}