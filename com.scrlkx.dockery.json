{
    "id" : "com.scrlkx.dockery",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "dockery",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=host",
        "--socket=system-bus",
        "--filesystem=/run/docker.sock"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "python3",
            "buildsystem": "simple",
            "build-options": {
                "build-args": ["--share=network"]
            },
            "build-commands": [
                "pip3 install --prefix=/app -r requirements.txt"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "requirements.txt"
                }
            ]
        },
        {
            "name" : "dockery",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/scrlkx/Code/oss"
                }
            ]
        }
    ]
}
